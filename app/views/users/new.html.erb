<% provide(:title, 'Sign Up')%>

<div class="col-md-12 border-bottom border-dark">

 
    <h1>Sign Up</h1>

</div>

<div class="col-2 mobile-buffer">
</div>

    
    <div class="col-8 col-md-6 col-md-offset-3">

        <div class="signup pt-3">
    
            <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
                    <%= f.label :username %>
                    <%= f.text_field :username,
                    class: 'form-control' %>

                    <%= f.label :email %>
                    <%= f.email_field :email,
                    class: 'form-control' %>

                    <%= f.label :password %>
                    <%= f.password_field :password,
                    class: 'form-control' %>

                    <%= f.label :password_confirmation, "Confirm your Password" %>
                    <%= f.password_field :password_confirmation,
                    class: 'form-control' %>

                    <br>

                    <%= f.submit "Create my account", class: "btn btn-submit" %>

                <% end %>



        </div>
    </div>

    <div class="col-2 mobile-buffer">
</div>


