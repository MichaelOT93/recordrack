<% provide(:title, "Log In") %>

<div class="col-md-12 border-bottom border-dark">
            
        
        <h1>Log In</h2>

        

</div>

    <div class="col-2 mobile-buffer">

    </div>

    <div class="col-8 col-md-6 col-md-offset-3">

    <div class="login pt-3">

        <%= form_for(:session, url: login_path) do |f| %>

            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>

            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
            <%= f.label :remember_me, class: 'checkbox inline' do %>

                <%= f.check_box :remember_me %>
                    <span>Remember me on this device</span>

            <% end %>

            <br>

            <%= f.submit "Log In", class: "btn btn-submit" %>

        <% end %>

            <p>New User? <%= link_to "Sign up!", signup_path %> </p>

    </div>

</div>

<div class="col-2 mobile-buffer">
</div>

