<% provide(:title, "Edit Record") %>

<div class="col-md-12 border-bottom border-dark">
<h1>Update Your Record</h1>
</div>

 <div class="col-2 mobile-buffer">

</div>


    <div class="col-8 col-md-6 col-md-offset-3">
        <div class="edit-record pt-3">
            <%= form_for(@record) do |f| %>
                <%= render 'shared/error_messages', object: f.object %>

                        <div class="field">
                            <%= f.label :title %>
                            <%= f.text_field :title, class: 'form-control' %>
                        </div>

                        <div class="field">
                            <%= f.label :artist %>
                            <%= f.text_field :artist, class: 'form-control' %>
                        </div>

                        <div class="field">
                            <%= f.label :genre %>
                            <%= f.text_field :genre, class: 'form-control' %>
                        </div>

                        <div class="field">
                            <%= f.label :description %>
                            <%= f.text_area :description, class: 'form-control' %>
                        </div>

                        <div class="field">
                            <%= f.label :year %>
                            <%= f.date_select :year,class: 'form-control', start_year: 1900 %>
                        </div>

                        <div class="field">
                            <%= f.label :price %>
                            <%= f.text_field :price, class: 'form-control' %>
                        </div>

                        <div class="field">
                            <%= f.label "Album Cover" %>
                            <%= f.file_field :album_cover, class: 'form-control' %>
                        </div>

                        <div class="actions">
                            <%= f.submit %>
                        </div>

                        <%= f.submit "Save changes",
                        class: "btn btn-submit"%>

                        <% end %>
        </div>

    </div>

<div class="col-2 mobile-buffer">
</div>

