<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Genre</th>
      <th>Description</th>
      <th>Year</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.title %></td>
        <td><%= record.artist %></td>
        <td><%= record.genre %></td>
        <td><%= record.description %></td>
        <td><%= record.year %></td>
        <td><%= record.price %></td>

        <% if session[:login] == 1 %>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="/home"><h2>Home</h2></a>

 <% if session[:login] == 1 %>
<%= link_to 'New Record', new_record_path %>
 <%end%>
